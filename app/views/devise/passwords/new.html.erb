<%= content_for :title do %>Forgot password?<%end %>
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, :class => "small" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control form-control-lg" %>
  </div>

  <div class="pb-6">
    <div class="container-fluid">
      <%= f.submit "Send me reset password instructions", :class => "btn btn-lg btn-primary btn-block" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
