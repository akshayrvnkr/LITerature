<%= content_for :title do %>Login<%end %>
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.label :email, :class => "small" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => "small" %>
    <%= f.password_field :password, autocomplete: "current-password", :class => "form-control form-control-lg", :minlength=>6 %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.label :remember_me, :class => "small" %>
      <%= f.check_box :remember_me %>
    </div>
  <% end %>

  <div class="pb-6">
    <div class="container-fluid">
      <%= f.submit "Log in", :class => "btn btn-lg btn-primary btn-block" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
